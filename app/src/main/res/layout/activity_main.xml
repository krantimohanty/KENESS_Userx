<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kenresource.keness.user.MyLeave">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:contentInsetLeft="0dp"
        app:elevation="6dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


    </android.support.design.widget.AppBarLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none">
   <LinearLayout
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

<android.support.v7.widget.CardView
    android:id="@+id/public_holiday"
    android:layout_marginTop="20dp"
   android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="6dp"
    app:contentPadding="2dp"
    app:cardBackgroundColor="@color/blue"
    android:layout_width="match_parent"
    android:layout_height="55dp">
<TextView
    android:textSize="20dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Public Holiday"
    android:textColor="@color/black"
    android:fontFamily="sans-serif"/>
</android.support.v7.widget.CardView>


      <android.support.v7.widget.CardView
          android:id="@+id/leave_application"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          app:cardCornerRadius="3dp"
          app:cardElevation="6dp"
          app:contentPadding="2dp"
          app:cardBackgroundColor="@color/blue"
          android:layout_width="match_parent"
          android:layout_height="55dp">
         <TextView
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Leave Application"
             android:textSize="20dp"
             android:textColor="@color/black"
             android:fontFamily="sans-serif"/>
      </android.support.v7.widget.CardView>


      <android.support.v7.widget.CardView
          android:id="@+id/leave_status"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          app:cardCornerRadius="3dp"
          app:cardElevation="6dp"
          app:contentPadding="2dp"
          app:cardBackgroundColor="@color/blue"
          android:layout_width="match_parent"
          android:layout_height="55dp">
         <TextView
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="20dp"
             android:text="Leave Application Status"
             android:textColor="@color/black"
             android:fontFamily="sans-serif"/>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:id="@+id/employee_attendance"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          app:cardCornerRadius="3dp"
          app:cardElevation="6dp"
          app:contentPadding="2dp"
          app:cardBackgroundColor="@color/blue"
          android:layout_width="match_parent"
          android:layout_height="55dp">
         <TextView
             android:textSize="20dp"
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Employee Attendance"
             android:textColor="@color/black"
             android:fontFamily="sans-serif"/>
      </android.support.v7.widget.CardView>
      <android.support.v7.widget.CardView
          android:layout_marginTop="20dp"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          app:cardCornerRadius="3dp"
          app:cardElevation="6dp"
          app:contentPadding="2dp"
          app:cardBackgroundColor="@color/blue"
          android:layout_width="match_parent"
          android:layout_height="55dp">
         <TextView
             android:textSize="20dp"
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Leave Balance"
             android:textColor="@color/black"
             android:fontFamily="sans-serif"/>
      </android.support.v7.widget.CardView>

