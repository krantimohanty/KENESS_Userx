<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kenresource.keness.user">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name="com.kenresource.keness.user.PublicHolidayActivity"
            android:parentActivityName="com.kenresource.keness.user.PublicHolidayActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kenresource.keness.user.PublicHolidayActivity" />
        </activity>
        <activity
            android:name="com.kenresource.keness.user.LeaveApplicationActivity"
            android:parentActivityName="com.kenresource.keness.user.LeaveApplicationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kenresource.keness.user.LeaveApplicationActivity" />
        </activity>
        <activity
            android:name="com.kenresource.keness.user.LeaveStatusActivity"
            android:parentActivityName="com.kenresource.keness.user.LeaveStatusActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kenresource.keness.user.LeaveStatusActivity" />
        </activity>
        <activity android:name="com.kenresource.keness.user.AttendanceActivity" />
        <activity
            android:name="com.kenresource.keness.user.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.kenresource.keness.user.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kenresource.keness.user.LoginActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.kenresource.keness.user.RegistrationActivity" />
        <activity android:name="com.kenresource.keness.user.CommentsActivity" />
        <activity
            android:name="com.kenresource.keness.user.LandingActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.kenresource.keness.user.SelfServiceActivity" />
        <activity android:name="com.kenresource.keness.user.MyApproval" />
        <activity android:name="com.kenresource.keness.user.MyTime" />
        <activity android:name="com.kenresource.keness.user.MyPay"></activity>
        <activity android:name="com.kenresource.keness.user.MyLeave"></activity>
        <activity android:name="com.kenresource.keness.user.ProfileMainActivity"
            android:theme="@style/AppTheme">
            </activity>
        <activity android:name="com.kenresource.keness.user.PersonalDetailsActivity"></activity>
        <activity android:name="com.kenresource.keness.user.IdentitiesActivity"></activity>
        <activity android:name="com.kenresource.keness.user.ContactAddressActivity"></activity>
        <activity android:name="com.kenresource.keness.user.EmergencyActivity"></activity>
        <activity android:name="com.kenresource.keness.user.EmploymentActivity"></activity>
        <activity android:name="com.kenresource.keness.user.DependentActivity"></activity>
        <activity android:name="com.kenresource.keness.user.MyMapActivity"></activity>
    </application>

</manifest>